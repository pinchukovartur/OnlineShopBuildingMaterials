CREATE TABLE `buildingonlineshop`.`authorities` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `username` VARCHAR(45) NOT NULL,
  `authority` VARCHAR(45) NOT NULL,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8;

INSERT INTO `buildingonlineshop`.`authorities` (`id`, `username`, `authority`) VALUES ('1', 'user', 'ROLE_USER');


CREATE TABLE `buildingonlineshop`.`users` (
  `username` VARCHAR(45) NOT NULL,
  `password` VARCHAR(45) NOT NULL,
  `enabled` INT(1) NOT NULL,
  PRIMARY KEY (`username`));

INSERT INTO `buildingonlineshop`.`users` (`username`, `password`, `enabled`) VALUES ('user', 'user', '1');
